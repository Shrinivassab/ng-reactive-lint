{
  "name": "reactive-lint",
  "version": "1.0.5",
  "description": "A linter for Angular/RxJS reactivity patterns",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "reactivelint": "./bin/reactivelint.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "reactive-lint src/**/*.ts",
    "lint-angular": "npm run build && node bin/reactivelint.js examples/angular-bad-code.ts",
    "test": "jest",
    "prepublish": "npm run build",
    "benchmark": "node benchmark.js examples/angular-good-code.ts",
    "reactive-lint": "reactivelint src"
  },
  "keywords": [
    "angular",
    "rxjs",
    "signals",
    "linting"
  ],
  "author": "Shrinivass Arunachalam Balasubramanian <shrinivassab@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/angular": "^1.8.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@angular/core": "^20.1.2",
    "rxjs": "^7.8.2",
    "glob": "^11.0.3",
    "ts-morph": "^26.0.0"
  }
}
