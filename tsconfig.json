{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "moduleResolution": "node"  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "examples/**/*", "test/**/*", "bin/**/*"]
}